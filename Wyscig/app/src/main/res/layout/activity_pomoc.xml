<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blekitny">

    <TextView
        android:id="@+id/help_tyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/help_tytul"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help"
        tools:ignore="MissingConstraints"
        android:layout_below="@id/help_tyt"
        android:layout_margin="15dp"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/stol_logon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/help"
        android:src="@drawable/stoliczek"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/stoliczek" />

    <Button
        android:id="@+id/powrot_z_helpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/powrot_z_helpa"
        android:backgroundTint="@color/purple_700"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>
